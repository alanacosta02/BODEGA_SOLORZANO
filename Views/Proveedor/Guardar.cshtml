@model BODEGA_SOLORZANO.Models.BoSolor.entProveedor

@{
    ViewData["Title"] = "Guardar Proveedor";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>

<body>
    <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="card" style="max-width: 30rem;">
            <div class="card-body">
                <h5 class="card-title">Registrar Proveedor</h5>
                <form asp-action="Guardar" asp-controller="Proveedor" method="post">
                    <div class="mb-3">
                        <label for="razonSocial" class="form-label">Razón Social</label>
                        <input asp-for="RazonSocial" type="text" class="form-control" id="razonSocial" placeholder="Ingresa la razón social">
                        <span asp-validation-for="RazonSocial" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="numDocumento" class="form-label">Número de Documento</label>
                        <input asp-for="NumDocumento" type="text" class="form-control" id="numDocumento" placeholder="Ingresa el número de documento">
                        <span asp-validation-for="NumDocumento" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input asp-for="contacto" type="text" class="form-control" id="telefono" placeholder="Ingresa el teléfono">
                        <span asp-validation-for="contacto" class="text-danger"></span>
                    </div>
                    <br>
                    <br>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a asp-action="Listar" asp-controller="Proveedor" class="btn btn-success"><i class="bi bi-plus-circle"></i>Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</body>
