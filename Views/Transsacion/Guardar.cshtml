@model BODEGA_SOLORZANO.Models.BoSolor.entTransacción
@{
    ViewData["Title"] = "Guardar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="card" style="max-width: 30rem;">
            <div class="card-body">
                <h5 class="card-title">Registrar Transacción</h5>
                <form asp-action="Guardar" asp-controller="Transaccion" method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Código de Transacción</span>
                        <input asp-for="CodTransaccion" class="form-control" placeholder="Ingrese el código de la transacción" aria-label="Código de Transacción" aria-describedby="basic-addon1">
                        <span asp-validation-for="CodTransaccion" class="text-danger"></span>
                    </div>

                    <!-- Other fields... -->

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon9">ID de Método de Pago</span>
                        <select asp-for="IdMetodo.IdMetodo" asp-items="@(new SelectList(ViewBag.MetodosPago, "IdMetodo", "Nombre"))" class="form-select">
                            <option value="">Selecciona un método de pago</option>
                        </select>
                        <span asp-validation-for="IdMetodo.IdMetodo" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon10">ID de Cuenta</span>
                        <select asp-for="IdCuenta.IdCuenta" asp-items="@(new SelectList(ViewBag.Cuentas, "IdCuenta", "Correo"))" class="form-select">
                            <option value="">Selecciona una cuenta</option>
                        </select>
                        <span asp-validation-for="IdCuenta.IdCuenta" class="text-danger"></span>
                    </div>

                    <br />
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a asp-action="Listar" asp-controller="Transsacion" class="btn btn-success"><i class="bi bi-plus-circle"></i>Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


