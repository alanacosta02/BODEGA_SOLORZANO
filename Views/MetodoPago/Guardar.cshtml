@model BODEGA_SOLORZANO.Models.BoSolor.entMetodoPago

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>

<body>
    <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="card" style="max-width: 30rem;">
            <div class="card-body">
                <h5 class="card-title">Registrar Método de Pago</h5>
                <form asp-action="Guardar" asp-controller="MetodoPago" method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Nombre del Método</span>
                        <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresa el nombre" aria-label="Nombre del Método" aria-describedby="basic-addon1">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text">Descripción</span>
                        <textarea asp-for="Descripcion" class="form-control" aria-label="Descripción"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <br>
                    <br>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a asp-action="Listar" asp-controller="MetodoPago" class="btn btn-success"><i class="bi bi-plus-circle"></i>Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</body>
