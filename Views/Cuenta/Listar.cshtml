@model List<BODEGA_SOLORZANO.Models.BoSolor.entCuenta>

@{
    ViewData["Title"] = "Listar";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <h1>Lista de Cuentas</h1>
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <a asp-action="Guardar" asp-controller="Cuenta" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>DNI</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Usuario</th>
                            <th>Activo</th>
                            <th>Fecha de Inicio</th>
                            <th>Fecha de Fin</th>
                            <th>Rol</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cuenta in Model)
                        {
                            <tr>
                                <td>@cuenta.IdCuenta</td>
                                <td>@cuenta.DNI</td>
                                <td>@cuenta.Telefono</td>
                                <td>@cuenta.Correo</td>
                                <td>@cuenta.UserName</td>
                                <td>@cuenta.Activo</td>
                                <td>@cuenta.FechaInicio</td>
                                <td>@(cuenta.FechaFin.HasValue ? cuenta.FechaFin.Value.ToString() : "")</td>
                                <td>@cuenta.IdRol.Nombre</td>
                                <td>
                                    <a asp-action="Editar" asp-controller="Cuenta" class="btn btn-primary btn-sm" asp-route-id="@cuenta.IdCuenta">Editar</a>
                                    <a asp-action="Eliminar" asp-controller="Cuenta" class="btn btn-danger btn-sm" asp-route-id="@cuenta.IdCuenta">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
