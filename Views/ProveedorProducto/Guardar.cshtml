@model BODEGA_SOLORZANO.Models.BoSolor.entProveedorProducto
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="card" style="max-width: 30rem;">
            <div class="card-body">
                <h5 class="card-title">Registrar Proveedor-Producto</h5>
                <form asp-action="Guardar" asp-controller="ProveedorProducto" method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Proveedor</span>
                        <select asp-for="Proveedor.IdProveedor" name="proveedor" asp-items="@(new SelectList(ViewBag.Proveedores, "IdProveedor", "RazonSocial"))" class="form-select">
                            <option value="">Selecciona un proveedor</option>
                        </select>
                        <span asp-validation-for="Proveedor.IdProveedor" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">Producto</span>
                        <select asp-for="Producto.IdProducto" name="producto" asp-items="@(new SelectList(ViewBag.Productos, "IdProducto", "Nombre"))" class="form-select">
                            <option value="">Selecciona un producto</option>
                        </select>
                        <span asp-validation-for="Producto.IdProducto" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon3">Precio de Compra</span>
                        <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" placeholder="Ingresa precio de compra" aria-label="Precio de Compra" aria-describedby="basic-addon3">
                        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a asp-action="Listar" asp-controller="ProveedorProducto" class="btn btn-success"><i class="bi bi-plus-circle"></i>Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</body>
